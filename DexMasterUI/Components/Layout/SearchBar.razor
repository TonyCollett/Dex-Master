<MudTextField Label="Search Pokemon" 
              @bind-Value="_searchTerm" 
              Margin="Margin.Dense" 
              Variant="Variant.Outlined" 
              Immediate="true"
              Adornment="Adornment.End" 
              AdornmentIcon="@Icons.Material.Filled.Search" 
              OnAdornmentClick="PerformSearch" 
              OnKeyPress="Enter" />

@code {
    [Parameter]
    public EventCallback<string> OnSearchCallback { get; set; }

    private string _searchTerm;

    private async Task Enter(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" || args.Code == "NumpadEnter")
        {
            await PerformSearch();
        }
    }

    private async Task PerformSearch()
    {
        await OnSearchCallback.InvokeAsync(_searchTerm);
    }
}
