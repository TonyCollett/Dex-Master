<MudTextField Label="Search" 
              @bind-Value="_searchTerm" 
              Margin="Margin.Dense" 
              Variant="Variant.Outlined" 
              Immediate="true"
              Adornment="Adornment.End" 
              AdornmentIcon="@Icons.Material.Filled.Search" 
              OnAdornmentClick="PerformSearch" 
              OnKeyPress="Enter" />

<MudSelect Value="_searchArea" 
           T="string" 
           Label="Area" 
           AnchorOrigin="Origin.BottomCenter" 
           Margin="Margin.Dense" 
           Variant="Variant.Outlined">
    <MudSelectItem Value="@("Pokemon")" />
    <MudSelectItem Value="@("Item")" />
    <MudSelectItem Value="@("Ability")" />
</MudSelect>

@code {
    [Parameter]
    public EventCallback<string> OnSearchCallback { get; set; }

    private string _searchTerm;
    private string _searchArea = "Pokemon";

    private async Task Enter(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" || args.Code == "NumpadEnter")
        {
            await PerformSearch();
        }
    }

    private async Task PerformSearch()
    {
        await OnSearchCallback.InvokeAsync($"/{_searchArea}/Search/{_searchTerm}");
    }
}
