<MudDialog>
    <DialogContent>
        <MudPaper Class="pa-4" Outlined="true">
            <MudTextField Label="New Username" @bind-Value="Username" FullWidth />
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="UpdateUsername">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    
    [Parameter] public string UserId { get; set; }
    [Parameter] public string Username { get; set; }
    
    private async Task UpdateUsername()
    {
        await userData.UpdateUsernameByIdAsync(UserId, Username);

        MudDialog.Close(DialogResult.Ok(true));
    }
}