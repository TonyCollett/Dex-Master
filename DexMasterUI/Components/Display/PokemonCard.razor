@if (Pokemon != null)
{
    <MudCard Outlined="true">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Dark" Variant="Variant.Filled">
                    @Pokemon.Id
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@CommonFunctions.Capitalise(Pokemon.Name)</MudText>
                <MudStack Row="true">
                    <MudText Typo="Typo.body2">@CommonFunctions.Capitalise(Pokemon.Types[0].Type.Name)</MudText>
                    @if (Pokemon.Types.Count > 1)
                    {
                        <MudText Typo="Typo.body2">@CommonFunctions.Capitalise(Pokemon.Types[1].Type.Name)</MudText>
                    }
                </MudStack>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton OnClick="@(OpenDrawer)" Icon="@Icons.Material.Filled.OpenInNew" Variant="Variant.Outlined" Color="Color.Primary"/>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardMedia Image="@Pokemon.Sprites.Other.OfficialArtwork.FrontDefault" Height="180" />
        <MudCardContent>
            
        </MudCardContent>
        <MudCardActions>
            @if (LoggedInUser != null)
            {
            <MudTooltip Text="Favourite" Arrow="true" Placement="Placement.Bottom" Color="Color.Primary">
                <MudIconButton Icon="@Icons.Material.Outlined.Star" Color="Color.Primary"/>
            </MudTooltip>
            <MudTooltip Text="Caught" Arrow="true" Placement="Placement.Bottom" Color="Color.Primary">
                <MudIconButton Icon="@Icons.Material.TwoTone.CatchingPokemon" Color="Color.Primary"/>
            </MudTooltip>
            <MudTooltip Text="Caught Shiny" Arrow="true" Placement="Placement.Bottom" Color="Color.Primary">
                <MudIconButton Icon="@Icons.Material.Filled.CatchingPokemon" Color="Color.Primary"/>
            </MudTooltip>
            }
            <MudTooltip Text="Share" Arrow="true" Placement="Placement.Bottom" Color="Color.Primary">
                <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Primary"/>
            </MudTooltip>
        </MudCardActions>
    </MudCard>
}

<MudDrawer @bind-Open="@_open"
           Anchor="Anchor.End"
           Elevation="1"
           Variant="@DrawerVariant.Temporary"
           Width="40%">
    @if (_open)
    {
        <PokemonDetails Pokemon="@Pokemon"/>
    }
</MudDrawer>

@code {
    [Parameter] 
    public Pokemon Pokemon { get; set; }

    [CascadingParameter] 
    public User LoggedInUser { get; set; }
    [CascadingParameter] 
    public string VersionName { get; set; }
    
    private bool _open;
    private string _pokemonTypes;

    protected override void OnParametersSet()
    {
        _pokemonTypes = Pokemon.Types.Select(t => t.Type.Name).Aggregate((a, b) => $"{CommonFunctions.Capitalise(a)} / {CommonFunctions.Capitalise(b)}");
    }

    private void OpenDrawer()
    {
        _open = true;
    }

}